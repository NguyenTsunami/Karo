<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardviewCell"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imgToken"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@null"
            android:foreground="@drawable/icon_o"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="@+id/imgBorderHorizontal"
            app:layout_constraintEnd_toEndOf="@+id/imgBorderHorizontal"
            app:layout_constraintStart_toStartOf="@+id/imgBorderHorizontal"
            app:layout_constraintTop_toTopOf="@+id/imgBorderHorizontal" />

        <ImageView
            android:id="@+id/imgBorderHorizontal"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/border_horizontal" />

        <ImageView
            android:id="@+id/imgBorderVertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgToken"
            app:layout_constraintEnd_toEndOf="@+id/imgToken"
            app:layout_constraintStart_toStartOf="@+id/imgToken"
            app:layout_constraintTop_toTopOf="@+id/imgToken"
            app:srcCompat="@drawable/border_vertical" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>